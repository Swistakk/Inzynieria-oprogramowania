<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wojtek.filomino" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainFilomino"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameRules"
            android:label="@string/title_activity_game_rules"
            android:parentActivityName=".MainFilomino" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.wojtek.filomino.MainFilomino" />
        </activity>
        <activity
            android:name=".SetParams"
            android:label="@string/title_activity_set_params"
            android:parentActivityName=".MainFilomino" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.wojtek.filomino.MainFilomino" />
        </activity>
        <activity
            android:name=".PlayLevel"
            android:label="@string/title_activity_play_level"
            android:parentActivityName=".MainFilomino" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.wojtek.filomino.MainFilomino" />
        </activity>
    </application>

</manifest>
