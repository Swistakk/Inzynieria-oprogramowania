<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.krzysztof.magicsquare" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".FirstLevel"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SecondLevel"
            android:label="@string/title_activity_second_level"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".GameMenu"
            android:label="@string/title_activity_game_menu"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LevelActivity"
            android:label="@string/title_activity_level" >
        </activity>
        <activity
            android:name=".GameRules"
            android:label="@string/title_activity_game_rules" >
        </activity>
    </application>

</manifest>
