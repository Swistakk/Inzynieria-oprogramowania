<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.joanna.nonograms.RulesActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:text="@string/nonograms_rules_heading"
                android:textAlignment="center"
                android:textSize="30sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/nonograms_rules_text_1"
                android:textAlignment="center"
                android:layout_below="@+id/title"
                android:textSize="20sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/array1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black">
            </LinearLayout>

            <TextView
                android:text="@string/nonograms_rules_text_2"
                android:textAlignment="center"
                android:layout_below="@+id/title"
                android:textSize="20sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/array2"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black">
            </LinearLayout>

            <TextView
                android:text="@string/nonograms_rules_text_3"
                android:textAlignment="center"
                android:layout_below="@+id/title"
                android:textSize="20sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/array3"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black">
            </LinearLayout>

            <TextView
                android:text="@string/nonograms_rules_text_3"
                android:textAlignment="center"
                android:layout_below="@+id/title"
                android:textSize="20sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/array4"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black">
            </LinearLayout>

            <TextView
                android:text="@string/nonograms_rules_text_4"
                android:textAlignment="center"
                android:layout_below="@+id/title"
                android:textSize="20sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
